{
  "name": "@drupal-kit/simple-oauth",
  "version": "0.10.0",
  "type": "module",
  "types": "./dist/index.d.ts",
  "dependencies": {
    "@drupal-kit/core": "workspace:0.10.0",
    "@wunderwerk/ts-functional": "1.0.0-beta.3"
  },
  "devDependencies": {
    "@drupal-kit/config-typescript": "workspace:0.10.0",
    "@drupal-kit/eslint-config": "workspace:0.10.0",
    "@drupal-kit/types": "workspace:0.10.0",
    "@rollup/plugin-typescript": "^11.1.1",
    "@swc/core": "^1.3.58",
    "ava": "^6.0.1",
    "esbuild": "^0.19.11",
    "msw": "^2.1.2",
    "rollup": "^4.9.5",
    "rollup-plugin-dts": "^6.1.0",
    "rollup-plugin-esbuild": "^6.1.0",
    "ts-node": "^10.9.2",
    "typescript": "5.3.3"
  },
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint --ext .ts,.tsx src --max-warnings 0",
    "test": "NODE_NO_WARNINGS=1 ava",
    "typecheck": "pnpm run '/(typecheck:.*)/'",
    "typecheck:src": "tsc --project ./tsconfig.json",
    "typecheck:tests": "tsc --project ./tsconfig.tests.json"
  },
  "ava": {
    "files": [
      "tests/**/*.test.ts"
    ],
    "extensions": {
      "ts": "module"
    },
    "nodeArguments": [
      "--loader",
      "ts-node/esm"
    ]
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ]
}
