{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*.ts"]
    },
    "lint": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "typecheck": {
      "dependsOn": ["build"],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "export-version": {
      "outputs": ["src/version.ts"],
      "inputs": ["package.json"]
    },
    "test:watch": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
