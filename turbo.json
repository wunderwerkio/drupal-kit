{
  "$schema": "https://turborepo.org/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "lint": {},
    "typecheck": {},
    "test": {
      "dependsOn": ["^build"],
      "output": [],
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "test:watch": {
      "cache": false
    }
  },
  "globalEnv": ["NODE_ENV"]
}
